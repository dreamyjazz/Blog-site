    <div class="add-book-main-container" style="background-image: url(https://images.unsplash.com/photo-1560092056-5669e776fc68?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1504&q=80);">
        <div class="add-book-container">
        <h2>Add a new Post! </h2>
        <form method="POST" action="/blogs">
        <div class="row100">
            <div class="col">
                <div class="input-box ">
                    <input type="text" name="Blog[title]" id="" required >
                    <span class="text">
                       Post Title
                    </span>
                    <span class="line">
                  
                  </span>
                </div>
            </div>
			      <div class="col">
                <div class="input-box ">
                    <input type="text" name="Blog[postSummary]" id="" required >
                    <span class="text">
                       Post Summary
                    </span>
                    <span class="line">
                  
                  </span>
                </div>
            </div>
            <div class="col">
              <div class="input-box">
                  <input type="text" name="Blog[blogPhoto]" id="" required >
                  <span class="text">
                    Image URL Link
                  </span>
                  <span class="line">
                  
                  </span>
              </div>
          </div>
          <div class="col">
              <div class="input-box">
                  <input type="text" name="Blog[tags]" id="" required >
                  <span class="text">
                     Tags
                  </span>
                  <span class="line">
                  
                  </span>
              </div>
          </div>
          <div class="row100">
              <div class="col">
                  <div class="input-box text-area">
                      <textarea   required="required" name="Blog[blogBody]" id=""></textarea>
                      <span class="text">
                       Post Content in here 
                      </span>
                      <span class="line"></span>
                  </div>
              </div>
          </div>
          <div class="row100">
              <div class="col">
                  <input type="submit" value="Post!">
              </div>
          </div>
      </form>
        </div>
