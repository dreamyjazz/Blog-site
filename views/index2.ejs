<!------------------------------------------- Main Page-------------------------------------------------->

  <!--=====================xPage title section=========-->
<main>
    <!--Site title section-->
    <section id="first-section" class="site-title">
        <div class="site-background">
            <h3>Welcome to Althea's</h3>
            <h1 class="bold-headings">My personal Blog</h1>
            <button class="btn"><a href="#more">Explore More</a></button>
        </div>
    </section>
    <!--=================x====xPage title section=======x======-->

    <!--=======Owl Blog Carousel ==========-->
    <section id="more" class="blog" >
        
        <div class="container">
                <div class="flex-row" style="justify-content: center;">
                <h3 style="font-size: 2rem;">Some of my works in writing</h3></div>
            <div class="owl-carousel owl-theme blog-post" >
               <%for(var i=0; i<works.length; i++){%>
                <div class="blog-card">
                    <img src="<%=works[i].coverImage%>" alt="A picture of the work"> 
                <div class="blog-card-title">
                    <h3><%=works[i].title%></h3>
                    <p class="post-tease"><%=works[i].details%></p>
                 <a href="<%=works[i].link%>">  <button class="cool-btn">View Work <span><i class="fas fa-chevron-circle-right"></i></span></button></a> 
                    <h5> <i class="fas fa-pen"></i><span> <%=works[i].createdOn%></span></h5>

                </div>
                </div>
				<%}%>
            </div>
            <div class="owl-navigation" >
                <span class="owl-nav-prev"><i class="fas fa-arrow-left"></i></span>
                <span class="owl-nav-next"><i class="fas fa-arrow-right"></i></span>

            </div>
        </div>
    </section>
    <!--===x====Owl Blog Carousel =====x=====-->
<br>
     <!--=======Journal Content==========-->
     <section id="blog" class="container">
             <div class="site-content">
				
                <div class="posts">
				<div class="center">
			     <h1>From the Journal</h1> 
		   </div>
					<div class="center">
						<p>
						See my latest Blog Posts
						</p>
					</div>
					<%for(var i =1 ; i<=3; i++){%>
                    <div class="post-content">
                        <div class="post-image">
                            <div>
                                <img class="img" src="<%=blogPosts[Count - i].blogPhoto%>" alt="">
                            </div>
                           <div class="post-info flex-row">
                               <span><i class="fas fa-user"></i>&nbsp;&nbsp;Admin</span>
                               <span><i class="fas fa-calendar-alt"></i>&nbsp;&nbsp;<%=blogPosts[Count - i].createdAt%></span>
                           </div>
                        </div>
                        <div class="post-title">
                            <a  href="/blog/<%=blogPosts[Count - i]._id%>"><h3 style="color:black;">
								<%=blogPosts[Count - i].title%>
								</h3></a>
                            <p><%=blogPosts[Count - i].postSummary%>
                            </p>
                        <a href="/blog/<%=blogPosts[Count - i]._id%>"><button class=" cool-btn">Read More &nbsp;<i class="fas fa-arrow-right"></i></button></a>
                        </div>
                        
                    </div>
					<br>
					<%}%>
                   
                   
                </div>
             
                <aside class="sidebar">
                    <div class="categories">
                        <h3>By tags</h3>
						
							  <ul class="category-list">
							<%for(var i=0; i< allTags.length; i++){%>
							<a href="/blog/<%=allTags[i]%>/page=1">
								<li class="list-item">
								<%=allTags[i]%>
                           </li>
							</a>
							<%}%>
                        </ul>
						
                     
                    </div>
                    <div class="currently-reading">
                        <h3>Currently Reading</h3>
                        <div class="post-content">
                            <div class="post-image">
                                <div>
                                    <img class="img" src="<%=CR.coverURL%>" alt="">
                                </div>
                               <div class="post-info flex-row">
                                   <span><i class="fas fa-calendar-alt"></i>&nbsp;&nbsp;<%=CR.start%></span>
                               </div>
                            </div>
                            <div class="post-title">
                                <h3><%=CR.title%></h3>
								<div class="center">
									   <h5>By <%=CR.author%></h5>
                               <a href="<%=CR.goodreadsURL%>"> <button class=" cool-btn">More details about it &nbsp;<i class="fas fa-arrow-right"></i></button></a>
								</div>
                             
                            </div>
                            
                        </div>
                    </div>
                    <div class="search-box">
                        <h3 style="text-align: center;">Search</h3>
                        <div class="center">
                            <form class="flex-row"  action="/blog/page=1" method="GET">
                            <input type="text" name="searchBox" class="input-elemenr">
                            <button class="form-btn ">Go</button>
                        </form>
                    </div>
                    </div>
                   <div id="my-pinter">
					 
						      <h3 style="text-align: center;">Find me on Pinterest</h3>
					     <div class="center">
                  <a data-pin-do="embedUser" data-pin-board-width="350" data-pin-scale-height="240" data-pin-scale-width="90" href="https://www.pinterest.com/iam_dreamy/"></a>
					   </div>
                 
                   </div>
                </aside>
             </div>
          

     </section>
     <!--==x=====Journal Content=====x=====-->
     

</main>

<!-------------x-------------x----------------------------- Main Section---------x-----------------------x--------------->

