<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edgy">
    <title>Edit Posts</title>
    <!--Costume style-->
    <link rel="stylesheet" href="/css/style.css">
    <!--Font awesome icons-->
    <link rel="stylesheet" href="/css/all.css">
    <!--Owl carousel Library-->
    <link rel="stylesheet" href="/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/css/owl.theme.default.min.css">
</head>
<body>
  
    <!--=============The loading section===========-->
    <div class="loader_bg">
        <h2>Loading ... !</h2>
        <div class="loader">
        </div>
    </div>
     <input type="checkbox" name="" id="check">
     <label for="check">
         <i class="fas fa-bars" id="btn"></i>
        <i class="fas fa-times" id="cancel"></i>
    </label>
   <!--=====The admin Dashboard ==========-->

<div class="admin-sidebar">
    <header>
        <i class="fas fa-user-lock"></i> <span>Admin</span>
    </header>
    <ul>
        <li><a href="/"><i class="fas fa-desktop"></i> <span>&nbsp; Home</span> </a></li>
        <li><a href="/admin/dashboard" ><i class="fas fa-pencil-alt"></i><span>&nbsp; New Post</span></a></li>
       <li><a href="#"><i class="fas fa-book-reader"></i> <span>&nbsp;Add a book</span></a></li>
	<li><a href="/admin/update-current-read"> <i class="far fa-bookmark"></i><span>&nbsp;Update C.R</span></a></li>
        <li><a href="/admin/edit/page=1"><i class="fas fa-desktop"></i> <span>&nbsp; Edit Posts</span></a></li>
        <li><a href="/admin/logout"><i class="fas fa-sign-out-alt"></i> <span>&nbsp; Log Out</span></a></li>
    </ul>
</div>
  <!--===x==The admin Dashboard =====x=====-->
  <div class="add-book-main-container" style="background-color: brown;">
    <main>
    
<!--=======Journal Content==========-->
<section id="blog" class="container">
    <div class="site-content">
       <div class="posts">
           <div class="center">
			     <h1>All the posted Articles</h1>
               <p class="simple">Start editing  </p>
		   </div>
     <%for(var i =0; i< docs.length; i++){%>
           <div class="post-content">
               <div class="post-image">
                   <div>
                       <img class="img" src="<%=docs[i].blogPhoto%>" alt="">
                   </div>
                  <div class="post-info flex-row">
                      <span><i class="fas fa-user"></i>&nbsp;&nbsp;Admin</span>
                      <span><i class="fas fa-calendar-alt"></i>&nbsp;&nbsp;<%=docs[i].createdAt%></span>
                  </div>
               </div>
               <div class="post-title">
                   <a href="#"><%=docs[i].title%></a>
                   <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit. Ab saepe optio molestiae accusantium libero soluta quos reiciendis possimus velit inventore eum, qui
                   </p>
                  <a href="/admin/blog/<%=docs[i]._id%>/edit"> 
					  <button class=" cool-btn">Edit Post &nbsp;
						  <i class="fas fa-arrow-right"></i></button>
				   </a>
               </div>
               
           </div>
		   <br>
		   <%}%>
           <div class="pagination flex-row">
               <a href="/admin/edit/page=<%=prevPage%>"><i class="fas fa-chevron-left"></i></a>
             
               <a href="/admnin/edit/page=<%=nextPage%>"><i class="fas fa-chevron-right"></i></a>
           </div>
       </div>
    
       <aside class="sidebar">
           <div class="currently-reading">
               <h3>Currently Reading</h3>
               <div class="post-content">
                   <div class="post-image">
                       <div>
                           <img class="img" src="https://images.roughtrade.com/product/images/files/000/192/259/original/kafk.jpg?1583594936" alt="">
                       </div>
                      <div class="post-info flex-row">
                          <span><i class="fas fa-calendar-alt"></i>&nbsp;&nbsp;March 11th, 2020</span>
                      </div>
                   </div>
                   <div class="post-title">
                       <h3>Kafka on the shore</h3>
                       <h5>By Haruki Murakami</h5>
                       <button class=" cool-btn">More details about it &nbsp;<i class="fas fa-arrow-right"></i></button>
                   </div>
                   
               </div>
           </div>
          <div id="pinterest-board">
           <h3 style="text-align: center;">Find me on Pinterest</h3>
           <a data-pin-do="embedUser" data-pin-board-width="400" data-pin-scale-height="240" data-pin-scale-width="80" href="https://www.pinterest.com/iam_dreamy/boards/"></a>
          </div>
       </aside>
    </div>
 

</section>

</div>






  
    <!--Pinterest Javascript-->
<script async defer src="//assets.pinterest.com/js/pinit.js"></script>
<!--Jquery library -->
<script src="/js/jquery3.5.1.min.js"></script>
<!--Costume javascript-->
<script src="/js/main.js"></script>
<!--Owl Carousel library-->
<script src="/js/owl.carousel.js"></script>

</body>
</html>